<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Reservation"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:weightSum="1">

    <Button
        android:id="@+id/btn_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="날짜 선택"
        android:textStyle="bold"/>

    <!-- 캘린더 -->
    <CalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="297dp"
        />

    <Button
        android:id="@+id/btn_Time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="시간 선택"
        android:textStyle="bold"/>
        <!-- 시간대 선택 -->
        <Spinner
            android:id="@+id/timeSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"/>

    <!-- 체크박스 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="예약 종류 선택"
        android:layout_marginTop="16dp"
        android:textSize="16sp" />

    <CheckBox
        android:id="@+id/checkBoxOption1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="기아자동차" />

    <CheckBox
        android:id="@+id/checkBoxOption2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="현대자동차" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RadioGroup
            android:id="@+id/Group1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모닝" />
            <CheckBox
                android:id="@+id/Moning1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모닝" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모닝" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모닝" />
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모닝" />
        </RadioGroup>
        <RadioGroup
            android:id="@+id/Group2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:visibility="gone">
            <CheckBox
                android:id="@+id/Box1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현대" />
            <CheckBox
                android:id="@+id/ToSsan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="투싼" />
            <CheckBox
                android:id="@+id/Box2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="싼타페" />
            <CheckBox
                android:id="@+id/Box3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="기아" />
            <CheckBox
                android:id="@+id/Box4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="제네시스" />
        </RadioGroup>

    </FrameLayout>
    </LinearLayout>



    <!-- 예약 버튼 -->
    <Button
        android:id="@+id/buttonReserve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="예약하기" />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical">
      <!-- 결과 텍스트 -->
      <TextView
          android:id="@+id/textViewResult"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="16dp"
          android:textSize="16dp"
          android:text="결과: " />
  </LinearLayout>



</LinearLayout>